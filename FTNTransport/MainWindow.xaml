<Window x:Class="FTNTransport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FTNTransport"
        mc:Ignorable="d" MinWidth="400" MinHeight="200" Closing="DataWindow_Closing"
        Title="ACBA Dispatch Program" Height="424" Width="815" WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow" Background="{x:Null}" FontFamily="Cambria Math">


    <DockPanel>
        <Menu IsMainMenu="True" DockPanel.Dock="Top" Name="Menu" Background="#FF9CBEE0">
            <MenuItem Header="File" FontWeight="Bold" >
                <MenuItem Header="Exit" Name="Exit" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <TabControl x:Name="tabControl" FontFamily="Cambria Math" FontWeight="Bold">
            <TabItem Header="Create Order" FontWeight="Normal" >
                <Grid Background="#FFE5E5E5" RenderTransformOrigin="-0.561,0.735" Margin="0,28,0,0" >

                    <ComboBox x:Name="comboBox_customer" HorizontalAlignment="Left" Margin="102,4,0,0" VerticalAlignment="Top" Width="129" Height="22" />
                    <Label x:Name="label" Content="Customer:" HorizontalAlignment="Left" Margin="5,3,0,0" VerticalAlignment="Top" Width="80" Background="Transparent" FontSize="16" FontFamily="Cambria Math" Height="29" />
                    <Label x:Name="label_Copy" Content="Container:" HorizontalAlignment="Left" Margin="5,35,0,0" VerticalAlignment="Top" Width="81" Background="Transparent" FontSize="16" FontFamily="Cambria Math" Height="29" />
                    <Label x:Name="label_Copy1" Content="Size:" HorizontalAlignment="Left" Margin="325,36,0,0" VerticalAlignment="Top" Width="44" Background="Transparent" FontSize="16" FontFamily="Cambria Math"  Height="24"/>
                    <ComboBox x:Name="comboBox_size" HorizontalAlignment="Left" Margin="315,66,0,0" VerticalAlignment="Top" Width="65" Height="22" RenderTransformOrigin="1.349,0.392"/>
                    <Label x:Name="label_Copy2" Content="Terminal:" HorizontalAlignment="Left" Margin="5,64,0,0" VerticalAlignment="Top" Width="77" Background="Transparent" FontSize="16" FontFamily="Cambria Math" Height="29"/>
                    <ComboBox x:Name="comboBox_container" HorizontalAlignment="Left" Margin="102,35,0,0" VerticalAlignment="Top" Width="195" Height="22" IsEditable="True" />
                    <ComboBox x:Name="comboBox_terminal" HorizontalAlignment="Left" Margin="102,64,0,0" VerticalAlignment="Top" Width="195"  Height="22" IsEditable="True"/>
                    <CheckBox x:Name="checkBox_repeat_order" Content="Repeat Order"  HorizontalAlignment="Left" Margin="315,5,0,0" VerticalAlignment="Top" Width="121" Height="15" ClickMode="Press" FontFamily="Cambria Math" TextOptions.TextHintingMode="Fixed" FontSize="13.333"/>
                    <Label x:Name="label_lfd" Content="Last Free Day:" HorizontalAlignment="Left" Margin="5,95,0,0" VerticalAlignment="Top" Width="106" Background="Transparent" FontSize="16" FontFamily="Cambria Math" Height="29" />
                    <DatePicker  HorizontalAlignment="Left" Margin="135,95,0,0" VerticalAlignment="Top" Width="162" FontSize="16" Height="27"/>
                    <Label x:Name="label_Copy4" Content="Delivery&#xD;&#xA; Destination:" HorizontalAlignment="Left" Margin="5,116,0,0" VerticalAlignment="Top" Width="95" Background="Transparent" FontSize="16" FontFamily="Cambria Math" Height="45"/>
                    <ComboBox x:Name="comboBox_destination" HorizontalAlignment="Left" Margin="115,135,0,0" VerticalAlignment="Top" Width="184"  Height="22"/>
                    <Label x:Name="label_Copy5" Content="Assign Driver:" HorizontalAlignment="Left" Margin="5,172,0,0" VerticalAlignment="Top" Width="107" Background="Transparent" FontSize="16" FontFamily="Cambria Math" Height="28" />
                    <ComboBox x:Name="comboBox_driver" HorizontalAlignment="Left" Margin="115,172,0,0" VerticalAlignment="Top" Width="184"  Height="22"/>
                    <Border BorderThickness="1" Height="30" Margin="0,-29,0,0" VerticalAlignment="Top" BorderBrush="Red" Background="#FFE5E5E5" >
                        <Label x:Name="label3" Content="Create New Order"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                    </Border>
                    <Label x:Name="label_Copy6" Content="Assign Truck:" HorizontalAlignment="Left" Margin="6,208,0,0" VerticalAlignment="Top" Width="107" Background="Transparent" FontSize="16" FontFamily="Cambria Math" Height="28" />
                    <ComboBox x:Name="comboBox_truck" HorizontalAlignment="Left" Margin="114,208,0,0" VerticalAlignment="Top" Width="184"  Height="22"/>
                </Grid>
            </TabItem>
            <TabItem Header="View Orders" FontWeight="Normal" Height="20" VerticalAlignment="Top" IsSelected="True" >
                <Grid  Background="#FFE5E5E5">
                    <ListView x:Name="listView1" Margin="0,90,0,0">
                        <ListView.View>
                            <GridView ColumnHeaderStringFormat="">
                                <GridView.ColumnHeaderContextMenu>
                                    <ContextMenu MinHeight="10" MinWidth="10"/>
                                </GridView.ColumnHeaderContextMenu>
                                <GridViewColumn Header="Order ID" Width="80"/>
                                <GridViewColumn Header="Date Created" Width="80"/>
                                <GridViewColumn Header="Out For Delivery" Width="100"/>
                                <GridViewColumn Header="Driver" Width="50"/>
                                <GridViewColumn Header="Status" Width="50"/>
                                <GridViewColumn Header="Truck" Width="50"/>
                                <GridViewColumn Header="Customer" Width="80"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Customer" FontWeight="Normal" >
                <Grid  Background="#FFE5E5E5">
                    <Border BorderThickness="1" Height="30" Margin="5,4,3,0" VerticalAlignment="Top" BorderBrush="Red" >
                        <Label x:Name="label5" Content="Create New Customer"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                    </Border>
                    <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="137,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" FontSize="16"/>
                    <Border BorderThickness="1" Height="30" Margin="5,228,3,0" VerticalAlignment="Top" BorderBrush="Red" >
                        <Label x:Name="label7" Content="Customer Information"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                    </Border>
                    <Label x:Name="label6" Content="Company Name:" Margin="5,40,0,0" FontSize="16" Height="33" VerticalAlignment="Top" HorizontalAlignment="Left" Width="128"/>
                </Grid>
            </TabItem>
            <TabItem Header="Driver Settings" FontWeight="Normal" >
                <Grid Background="#FFE5E5E5" >
                    <Border BorderThickness="1" Height="30" Margin="5,4,3,0" VerticalAlignment="Top" BorderBrush="Red" >
                        <Label x:Name="label1" Content="Create New Driver"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                    </Border>
                    <Label x:Name="label2" Content="First Name:" HorizontalAlignment="Left" Margin="5,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.154,0.069" Width="104" FontSize="16"/>
                    <Label x:Name="label2_Copy" Content="Middle Name:" HorizontalAlignment="Left" Margin="5,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.154,0.069" Width="108" FontSize="16"/>
                    <Label x:Name="label2_Copy1" Content="Last Name:" HorizontalAlignment="Left" Margin="5,92,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.154,0.069" Width="104" FontSize="16"/>
                    <TextBox x:Name="textBox_fname" HorizontalAlignment="Left" Height="23" Margin="114,40,0,0" VerticalAlignment="Top" Width="120" FontSize="16" MaxLines="1" MinLines="1"/>
                    <TextBox x:Name="textBox_mname" HorizontalAlignment="Left" Height="23" Margin="114,66,0,0" VerticalAlignment="Top" Width="120" FontSize="16" MaxLines="1" MinLines="1"/>
                    <TextBox x:Name="textBox_lname" HorizontalAlignment="Left" Height="23" Margin="114,92,0,0" VerticalAlignment="Top" Width="120" FontSize="16" MaxLines="1" MinLines="1"/>
                    <Label x:Name="label2_Copy2" Content="Email:" HorizontalAlignment="Left" Margin="248,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.154,0.069" Width="59" FontSize="16"/>
                    <Label x:Name="label2_Copy3" Content="Phone:" HorizontalAlignment="Left" Margin="248,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.154,0.069" Width="61" FontSize="16"/>
                    <TextBox x:Name="textBox_email" HorizontalAlignment="Left" Height="23" Margin="313,41,0,0" VerticalAlignment="Top" Width="225" FontSize="16" MaxLines="1" MinLines="1"/>
                    <TextBox x:Name="textBox_phone" HorizontalAlignment="Left" Height="23" Margin="313,66,0,0" VerticalAlignment="Top" Width="142" FontSize="16" MaxLines="1" MinLines="1" HorizontalScrollBarVisibility="Auto" MaxLength="10" IsUndoEnabled="True" TextChanged="phone_format"/>
                    <Button x:Name="button" Content="Create Driver" HorizontalAlignment="Left" Margin="544,41,0,0" VerticalAlignment="Top" Width="101" Height="63" Click="button_Click" FontSize="13.333"/>
                    <Border BorderThickness="1" Height="30" Margin="5,186,3,0" VerticalAlignment="Top" BorderBrush="Red" >
                        <Label x:Name="label4" Content="Driver Information"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                    </Border>
                    <Grid Margin="8,164,0,61">
                        <Grid Margin="0,0,0,-56">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="792*"/>
                            </Grid.ColumnDefinitions>
                            <ListView x:Name="listView_driver" Grid.ColumnSpan="2"  Margin="0,54,0,-1" >
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Width="Auto"  Header="ID" DisplayMemberBinding="{Binding id}"/>
                                        <GridViewColumn Width="Auto" Header="Name" DisplayMemberBinding="{Binding name}"/>
                                        <GridViewColumn Width="Auto" Header="Email" DisplayMemberBinding="{Binding email}"/>
                                        <GridViewColumn Width="Auto" Header="Phone" DisplayMemberBinding="{Binding phone}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>

                        </Grid>

                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="Destination Settings" FontWeight="Normal" >
                <Grid Background="#FFE5E5E5" >
                    <Border BorderThickness="1" Height="30" Margin="5,4,3,0" VerticalAlignment="Top" BorderBrush="Red" >
                        <Label x:Name="label8" Content="Create New Destination"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                    </Border>
                    <Label x:Name="label9" Content="Location Name:" HorizontalAlignment="Left" Margin="5,40,0,0" VerticalAlignment="Top" Width="117" FontSize="16" Height="25"/>
                    <TextBox x:Name="textBox_companyname" MaxLines="1" MinLines="1" HorizontalAlignment="Left" Height="23" Margin="123,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="283" FontSize="16"/>
                    <Label x:Name="label9_Copy" Content="Address:" HorizontalAlignment="Left" Margin="5,70,0,0" VerticalAlignment="Top" Width="86" FontSize="16" Height="25"/>
                    <TextBox x:Name="textBox1_address" MaxLines="1" MinLines="1" HorizontalAlignment="Left" Height="23" Margin="123,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="283" FontSize="16"/>
                    <Label x:Name="label9_Copy1" Content="City:" HorizontalAlignment="Left" Margin="422,40,0,0" VerticalAlignment="Top" Width="44" FontSize="16" Height="25"/>
                    <Label x:Name="label9_Copy2" Content="Zipcode: " HorizontalAlignment="Left" Margin="419,70,0,0" VerticalAlignment="Top" Width="69" FontSize="16" Height="25"/>
                    <TextBox x:Name="textBox1_city" MaxLines="1" MinLines="1" HorizontalAlignment="Left" Height="23" Margin="465,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="251" FontSize="16"/>
                    <TextBox x:Name="textBox1_zipcode" MaxLines="1" MinLines="1" HorizontalAlignment="Left" Height="23" Margin="489,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" FontSize="16" TextChanged="zipCodeFormatter"/>
                    <Label x:Name="label9_Copy3" Content="State:" HorizontalAlignment="Left" Margin="565,70,0,0" VerticalAlignment="Top" Width="64" FontSize="16" Height="25"/>
                    <ComboBox x:Name="comboBox_state" HorizontalAlignment="Left" Margin="618,70,0,0" VerticalAlignment="Top" Width="97" FontSize="16"/>
                    <Button x:Name="button_create_destination" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"  Content="Create Destination&#xD;&#xA;" HorizontalAlignment="Left" Height="44" Margin="5,101,0,0" VerticalAlignment="Top" Width="148" FontSize="14.667" TextOptions.TextFormattingMode="Display" Click="button_create_destination_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Truck Settings" FontWeight="Normal" >
                <Grid Background="#FFE5E5E5" >
                    <Border BorderThickness="1" Height="30" Margin="5,4,3,0" VerticalAlignment="Top" BorderBrush="Red" >
                        <Label x:Name="l" Content="Create New Truck"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                    </Border>
                    <Label x:Name="label9_Copy4" Content="Truck Name:" HorizontalAlignment="Left" Margin="5,40,0,0" VerticalAlignment="Top" Width="109" FontSize="16" Height="25"/>
                    <TextBox x:Name="textBox_truck_name" MaxLines="1" MinLines="1" HorizontalAlignment="Left" Height="23" Margin="119,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" FontSize="16"/>
                    <Label x:Name="label9_Copy5" Content="License Plate:" HorizontalAlignment="Left" Margin="5,70,0,0" VerticalAlignment="Top" Width="109" FontSize="16" Height="25"/>
                    <Label x:Name="label9_Copy6" Content="Cargo Capacity:" HorizontalAlignment="Left" Margin="5,100,0,0" VerticalAlignment="Top" Width="117" FontSize="16" Height="32"/>
                    <TextBox x:Name="textBox_truck_licenseplate" MaxLines="1" MinLines="1" HorizontalAlignment="Left" Height="23" Margin="119,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" FontSize="16"/>
                    <TextBox x:Name="textBox_truck_cargocapacity" MaxLines="1" MinLines="1" HorizontalAlignment="Left" Height="23" Margin="119,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" FontSize="16"/>
                    <Button x:Name="button_truck" Content="Create Truck" HorizontalAlignment="Left" Margin="653,39,0,0" VerticalAlignment="Top" Width="145" Height="82" FontSize="14.667" Click="button_truck_Click"/>
                    <Label x:Name="label9_Copy7" Content="MPG:" HorizontalAlignment="Left" Margin="379,40,0,0" VerticalAlignment="Top" Width="55" FontSize="16" Height="32"/>
                    <TextBox x:Name="textBox_truck_mpg" MaxLines="1" MinLines="1" HorizontalAlignment="Left" Height="23" Margin="431,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="83" FontSize="16"/>
                    <ListView x:Name="listView_truck" Margin="0,246,0,1" FontSize="16" FontWeight="Bold" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="Auto"  Header="ID" DisplayMemberBinding="{Binding id}"/>
                                <GridViewColumn Width="Auto" Header="Truck Name" DisplayMemberBinding="{Binding name}"/>
                                <GridViewColumn Width="Auto" Header="License Plate" DisplayMemberBinding="{Binding license_plate}"/>
                                <GridViewColumn Width="Auto" Header="MPG" DisplayMemberBinding="{Binding mpg}"/>
                            </GridView>

                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>

    </DockPanel>

</Window>
