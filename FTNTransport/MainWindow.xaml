<Window x:Class="FTNTransport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FTNTransport"
        mc:Ignorable="d" MinWidth="400" MinHeight="200" Closing="DataWindow_Closing"
        Title="ACBA Dispatch Program" Height="350" Width="525" WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow" Background="{x:Null}" FontFamily="Cambria Math">


    <DockPanel>
        <Menu IsMainMenu="True" DockPanel.Dock="Top" Name="Menu" Background="#FF9CBEE0">
            <MenuItem Header="File" FontWeight="Bold" >
                <MenuItem Header="Exit" Name="Exit" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <TabControl x:Name="tabControl" FontFamily="Cambria Math" FontWeight="Bold">
            <TabItem Header="Create Orders" FontWeight="Normal" >
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="88*"/>
                        <ColumnDefinition Width="192*"/>
                        <ColumnDefinition Width="231*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="2,3,0,0" VerticalAlignment="Top" Width="129" Grid.Column="1" Height="22"/>
                    <Label x:Name="label" Content="Customer:" HorizontalAlignment="Left" Margin="0,3,0,0" VerticalAlignment="Top" Width="80" Background="Transparent" FontSize="16" FontFamily="Cambria Math" Height="29"/>
                    <Label x:Name="label_Copy" Content="Container:" HorizontalAlignment="Left" Margin="0,35,0,0" VerticalAlignment="Top" Width="81" Background="Transparent" FontSize="16" FontFamily="Cambria Math" Height="29"/>
                    <Label x:Name="label_Copy1" Content="Size:" HorizontalAlignment="Left" Margin="1,35,0,0" VerticalAlignment="Top" Width="44" Background="Transparent" FontSize="16" FontFamily="Cambria Math" Grid.Column="2" Height="24"/>
                    <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" Margin="2,64,0,0" VerticalAlignment="Top" Width="65" Grid.Column="2" IsEditable="True" Height="22"/>
                    <Label x:Name="label_Copy2" Content="Terminal:" HorizontalAlignment="Left" Margin="0,64,0,0" VerticalAlignment="Top" Width="77" Background="Transparent" FontSize="16" FontFamily="Cambria Math" Height="29"/>
                    <ComboBox x:Name="comboBox_Copy" HorizontalAlignment="Left" Margin="2,35,0,0" VerticalAlignment="Top" Width="185" IsEditable="True" Height="22" Grid.Column="1"/>
                    <ComboBox x:Name="comboBox_Copy1" HorizontalAlignment="Left" Margin="2,64,0,0" VerticalAlignment="Top" Width="184" IsEditable="True" Grid.Column="1" Height="22"/>
                    <CheckBox x:Name="checkBox" Content="Repeat Order" Grid.Column="1" HorizontalAlignment="Left" Margin="138,5,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="121" Height="15" ClickMode="Press" FontFamily="Cambria Math" TextOptions.TextHintingMode="Fixed" FontSize="13.333"/>
                    <Label x:Name="label_Copy3" Content="Last Free Day:" HorizontalAlignment="Left" Margin="0,95,0,0" VerticalAlignment="Top" Width="106" Background="Transparent" FontSize="16" FontFamily="Cambria Math" Height="29" Grid.ColumnSpan="2"/>
                    <DatePicker Grid.Column="1" HorizontalAlignment="Left" Margin="31,95,0,0" VerticalAlignment="Top" Width="152" FontSize="16"/>
                </Grid>
            </TabItem>
            <TabItem Header="View Orders" FontWeight="Normal" >
                <Grid Margin="-46,-133,-127,-112" Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </DockPanel>

</Window>
